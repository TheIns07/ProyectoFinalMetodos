<div class = "container p-4">
    <div class = "row">
        {{#each links}}
            <div class="col-md-3">
                    <div class="card text-center">
                        <div class ="card-body">
                            <a href = "{{password}}" target = "_blank">
                                <h3 class = "card-title text-uppercase">
                                      {{username}}  
                                </h3>
                                <h4>
                                    {{password}}
                                    
                                </h4>
                            </a>
                            <p class = "m-2"></p>
                            <a href = "/links/delete/{{id}}" class = "btn btn-danger">Borrar Maestro</a>
                             <a href = "/links/edit/{{id}}" class = "btn btn-secondary">Editar Maestro</a>
                        </div>
                    </div>

            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>Sin maestros registrados.</p>
                    <a href = "/links/add">Crear Maestro</a>
                </div>
            </div>
        {{/each}}

    </div>
    
</div>