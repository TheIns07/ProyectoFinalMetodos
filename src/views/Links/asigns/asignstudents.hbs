<div class="container">
 <div class = "card mx-auto">
 <form action="../links/getgroups/{{courses.id}}" method = "POST" > 

    
        {{#each groups}}
        <h2>Grupo</h2>
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
               <h3>{{hours}} a {{hourFinn}}. Dias: {{days}}.
               </h3>
                    <a href = "/deletegroup/{{id}}" class="btn btn-danger btn-sm">Eliminar$</a>
            </li>
        </ul>
        <br>
        <a href = "/links/cursos/" class="btn btn-primary btn-sm">Regresar</a>
        {{else}}
        <div class="container">
        <div class = "card mx-auto">
            <h3>Sin Grupos Asignados</h3>
             <a href = "/links/cursos/" class="btn btn-primary btn-sm">Regresar</a>
        </div>
    </div>
        {{/each}}

 </form>
 </div>
 
 </div>
